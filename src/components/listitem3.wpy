<style scoped="true" type="less">
  .listitem {
    padding: 25rpx 30rpx 25rpx 30rpx;
    background: #ffffff;
    box-sizing: border-box;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.05);
    width: 100%;
    height: 300rpx;
    position: relative;
    margin-top: 20rpx;
    margin-bottom: 19rpx;
  }
  .infobox {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
    height: 150rpx;
    image {
      width: 150rpx;
      height: 150rpx;
    }
    .info {
      margin-left: 24rpx;
      height: 150rpx;
      width: 80%;
      flex-shrink: .2;
      .title {
        font-size: 28rpx;
        color: #3e3835;
        letter-spacing: 1.75rpx;
      }
      .price {
        margin-top: 20rpx;
        font-size: 24rpx;
        color: #ff4b4b;
      }
      .label {
        margin-top: 20rpx;
        font-size: 24rpx;
        color: #a9a29f;
        letter-spacing: 1.5rpx;
      }
    }
  }
  .line {
    background-color: #ededed;
    width: 684rpx;
    height: 1rpx;
    margin-top: 18rpx;
  }
  .functionbtn {
    font-size: 24rpx;
