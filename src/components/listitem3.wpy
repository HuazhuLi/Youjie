    align-items: center;
  }
</style>

<template>
  <view class="listitem">
    <view catchtap="openInfo" data-itemid="{{thingsitem._id}}" data-type="{{thingsitem.type}}" class="infobox">
      <image mode="aspectFill" src="{{thingsitem.pictures[0]}}" />
      <view class="info">
        <view class="title">{{thingsitem.title}}</view>
        <view class="price">￥{{thingsitem.price}}</view>
        <view class="label">交易成功</view>
      </view>
    </view>
    <view class="line"></view>
    <view @tap="contactHandler" class="functionbtn" data-contact="{{thingsitem.contact_way}}">查看卖家联系方式</view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  export default class ListItemPanel extends wepy.component {
    props = {
      thingsitem: {}
    }
    data = {}
    computed = {}
    methods = {
      contactHandler(e) {
        let data = e.currentTarget.dataset.contact
        let self = this
        wepy.setClipboardData({
          data: data,
          success: (res) => {
            wx.showModal({
              title: '提示',
              content: '联系方式（微信ID）已复制到剪贴板',
              success: function(res) {
                if (res.confirm) {
                  console.log('用户点击确定')
                } else if (res.cancel) {
                  console.log('用户点击取消')
                }
              }
            })
          },
          fail: (res) => {}
        })
      },
      openInfo(e) {
        let type = e.currentTarget.dataset.type
        let id = e.currentTarget.dataset.itemid
        if (type == 1) {
          wx.navigateTo({
            url: 'thingsinfo?id=' + id
          })
        } else {
          wx.navigateTo({
            url: 'rentinfo?id=' + id
          })
        }
      }
    }
  }
</script>
